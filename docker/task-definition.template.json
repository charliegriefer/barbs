{
  "family": "barbs-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::223741390366:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::223741390366:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "barbs-container",
      "image": "223741390366.dkr.ecr.us-west-1.amazonaws.com/barbs-repo:delayed-ssl",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        },
        {
          "containerPort": 443,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SECRET_KEY",
          "value": "your-secret-key-here"
        },
        {
          "name": "PETSTABLISHED_PUBLIC_KEY", 
          "value": "your-api-key-here"
        },
        {
          "name": "SSL_EMAIL",
          "value": "your-email-for-ssl-certificates@example.com"
        },
        {
          "name": "FLASK_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/barbs-task",
          "awslogs-region": "us-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
